generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model items {
  id       Int    @id @unique(map: "id_UNIQUE") @default(autoincrement())
  name     String @db.VarChar(225)
  score    Int
  place_id Int
  places   places @relation(fields: [place_id], references: [id], onDelete: Cascade, map: "fk_items_places")

  @@index([place_id], map: "fk_items_places_idx")
}

model leaderboard {
  id    Int    @id @unique(map: "id_UNIQUE") @default(autoincrement())
  name  String @db.VarChar(225)
  score Int
}

model places {
  id      Int     @id @unique(map: "id_UNIQUE") @default(autoincrement())
  name    String  @db.VarChar(225)
  room_id Int
  items   items[]
  rooms   rooms   @relation(fields: [room_id], references: [id], onDelete: Cascade, map: "fk_places_rooms")

  @@index([room_id], map: "fk_places_rooms_idx")
}

model rooms {
  id     Int      @id @unique(map: "id_UNIQUE") @default(autoincrement())
  name   String   @db.VarChar(225)
  places places[]
}
